<body>
  <%- include('../partials/header'); %>

    <div class="container">

      <div class="ctn container1">
        <div class="info username">
          <%= u.username %>
        </div>
        <div class="info email">Email: <%= u.email %>
        </div>
        <div class="info phone">Phone: <%= u.phone %>
        </div>
